{
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "../dist/client",
    "jsx": "react",
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules"
  ]
}